<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Tutorial Text Style-->
    <style name="text_style_tutorial_main_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/dunggeunmo</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_style_tutorial_sub_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <style name="text_style_title_bar">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="fontFamily">@font/dunggeunmo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Tutorial Count Text Style-->
    <style name="text_style_base_tutorial_count">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/dunggeunmo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style_tutorial_count_black" parent="text_style_base_tutorial_count">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Tutorial Count Text Style-->
    <!--Tutorial Text Style-->

    <!-- Small Text Style -->
    <style name="text_style_base_small_text">
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <style name="text_style_small_text_black" parent="text_style_base_small_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_style_small_text_white" parent="text_style_base_small_text">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Small Text Style -->

    <!-- Medium Text Style -->
    <style name="text_style_base_medium_text">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <style name="text_style_medium_left_text_black" parent="text_style_base_medium_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="text_style_medium_left_text_white" parent="text_style_base_medium_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="text_style_medium_center_text_black" parent="text_style_base_medium_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Medium Text Style -->
</resources>